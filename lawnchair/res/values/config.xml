<?xml version="1.0" encoding="utf-8"?>


<resources>
    <!-- Wether or not blur is enabled per default -->
    <bool name="config_default_enable_blur">false</bool>
    <!-- The default blur strength -->
    <item format="float" type="dimen" name="config_default_blur_strength">75</item>
    <!-- (Deprecated) The default icon pack to use; empty = system icons -->
    <string name="config_default_icon_pack" translatable="false"/>
    <!-- Wether or not adaptive icons should be generated for legacy icons -->
    <bool name="config_enable_legacy_treatment">true</bool>
    <!-- Wether or not new adaptive icons should be generated for adaptive icons with purely white background -->
    <bool name="config_enable_white_only_treatment">false</bool>
    <!-- If set to true lawnchair will generate colorized background for legacy masked icons -->
    <bool name="config_enable_colorized_legacy_treatment">true</bool>
    <!-- Wether the status bar should be hidden on the home screen -->
    <bool name="config_hide_statusbar">false</bool>
    <!-- Wether smartspace (at a glance) should be enabled per default -->
    <bool name="config_enable_smartspace">true</bool>
    <!-- Which search provider to use per default -->
    <string name="config_default_search_provider" translatable="false">ch.deletescape.lawnchair.globalsearch.providers.GoogleSearchProvider</string>
    <!-- Which color resolver to use per default; Possible values:
    ch.deletescape.lawnchair.colors.SystemAccentResolver
    ch.deletescape.lawnchair.colors.PixelAccentResolver
    ch.deletescape.lawnchair.colors.RGBColorResolver|R|G|B
    ch.deletescape.lawnchair.colors.WallpaperMainColorResolver
    ch.deletescape.lawnchair.colors.WallpaperSecondaryColorResolver
    ch.deletescape.lawnchair.colors.WallpaperTertiaryColorResolver -->
    <string name="config_default_color_resolver" translatable="false">ch.deletescape.lawnchair.colors.PixelAccentResolver</string>
    <!-- The default icon packs to use -->
    <string-array name="config_default_icon_packs">
        <item>@string/config_default_icon_pack</item>
    </string-array>

    <!-- Out of 100, the percent to shrink the workspace during options mode. -->
    <integer name="config_workspaceOptionsShrinkPercentage">70</integer>
</resources>
